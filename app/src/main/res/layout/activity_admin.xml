<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="15dp"
    tools:context=".AdminActivity">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/back"/>

    <TextView
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/tv_welcome_vendor"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Welcome To Admin Pannel"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"/>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_welcome_vendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:columnCount="8"
                android:rowCount="8" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_upload_slide"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_banner"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Upload Slide Banner"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_upload_product"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_up_product"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Upload Product"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_admin_manage_product"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="80dp"
                                android:layout_height="55dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_manage_product"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Manage Product"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_order_request"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_order_req"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Order Request"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_transfer_order"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_transfer_order"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Transfer Order"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_show_all_product"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_product_list"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Product List"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_show_all_vendor"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_vendor_list"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Vendor List"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_show_all_distributor"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_vendor_list"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Distributor List"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_add_coupon"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_add_coupon"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Add Coupon"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_c_ref_value"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_refer"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Add Customer Refer Value"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_v_ref_value"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_refer"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Add Vendor Refer Value"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_d_ref_value"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_refer"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Add Distributor Refer Value"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Weight"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_add_weight"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text="Add Weight Amount"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_approval"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_vendor_approval"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text=" Ven / Dis Approval"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="15dp"
                        android:id="@+id/cv_add_limitation"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="6dp"
                        android:elevation="15dp"
                        >

                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/border2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_add_limit"/>

                            <TextView
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:text=" Product Limitation"
                                android:textSize="12sp"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>




                </LinearLayout>



            </GridLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
