<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.BrandShopFragment">

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Brand Shop Available"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:id="@+id/empty_vendor_list"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_vendor_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Brand Shop"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/brand_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_vendor_list"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/empty_vendor_list"
        android:gravity="center"
        android:text="Please Log In first..."
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>