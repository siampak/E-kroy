<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardElevation="0dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/proImage"
            android:layout_marginStart="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width=".5dp"
            app:civ_border_color="@color/colorPrimary"
            android:src="@drawable/profile_image_icon"/>

        <ImageView
            android:id="@+id/rateImg"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/proImage"
            android:src="@drawable/rating_icon"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_rating"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="4.5"
            android:textColor="@color/colorBlack"
            android:layout_toEndOf="@+id/rateImg"
            android:layout_below="@+id/proImage"/>

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/nameR"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:layout_toEndOf="@+id/proImage"/>

        <TextView
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp"
            android:id="@+id/reviewText"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Review"
            android:textColor="#555"
            android:layout_toEndOf="@+id/proImage"
            android:layout_below="@+id/nameR"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>