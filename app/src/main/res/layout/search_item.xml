<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/s_product_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/shoe"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/s_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand Shoe"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/s_product_des"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/v_product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#4E4B4B"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/s_product_price"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/v_product_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="à§³ 1999"
                    android:textStyle="bold"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>